
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Список товаров";
}
<p>
    <a asp-controller="Home" asp-action="CreateProduct" class="btn btn-success">Создать</a>  @*asp-area="Admin" не указываем*@
</p>

@using (Html.BeginForm(method : FormMethod.Get))
{
<p>
    Найти: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Order)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Section)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Brand)
                </td>
                <td>
                    <img src="~/images/home/@item.ImageUrl"  alt="@item.ImageUrl" width="50"/>
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Детали", "DetailsProduct", new { Area = "Admin", id = item.Id })
                </td>
                <td>
                    @*@Html.ActionLink("Редактировать", "EditProduct", new { Area = "Admin", id = item.Id }, new { @class = "glyphicon glyphicon-edit" })*@
                    <a asp-action="EditProduct" title="Редактировать" asp-route-Id="@item.Id"><i class="glyphicon glyphicon-edit"></i></a>
                </td>
                <td>
                    <a asp-action="DeleteProduct" asp-route-id="@item.Id" title="Удалить"><i class="glyphicon glyphicon-remove"></i></a>
                    @*@Html.ActionLink("Удалить", "DeleteProduct", new { Area = "Admin", id = item.Id }, new { @class = "glyphicon glyphicon-remove" })*@
                </td>
            </tr>
        }
    </tbody>
</table>


