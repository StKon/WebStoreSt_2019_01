
@model EmployeeViewModel

@{
    @*Layout = null;*@
    ViewData["Title"] = "Карточка Сотрудника";
}

<h3>@ViewData["Title"]</h3>
<table class="table">
    <tr>
        <td>ID :</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Фамилия :</td>
        <td>@Model.SecondName</td>
    </tr>
    <tr>
        <td>Имя :</td>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <td>Отчество :</td>
        <td>@Model.Patronymic</td>
    </tr>
    <tr>
        <td>Возраст :</td>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <td>Дата рождения :</td>
        <td>@Model.BirthDate.ToString("d")</td>
    </tr>
    <tr>
        <td>Дата устройства на работу :</td>
        <td>@Model.DateWork.ToString("d")</td>
    </tr>
</table>

@*@Html.DisplayForModel()*@

<hr />
<p>@Html.ActionLink("Список Сотрудников", "Index", "Employees")</p>
