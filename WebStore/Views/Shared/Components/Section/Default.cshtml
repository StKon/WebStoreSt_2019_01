@model IEnumerable<SectionViewModel>

<h2>Категории</h2>

<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->

    @foreach (var section in Model)
    {
        if (section.ChildSections.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href=#@(section.Name.ToLower())>
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @(section.Name)
                        </a>
                    </h4>
                </div>
                <div id=@(section.Name.ToLower()) class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var section_child in section.ChildSections)
                            {
                                @*<li><a href="#">@(section_child.Name) </a></li>*@
                                <li><a asp-controller="Catalog" asp-action="Shop" asp-route-sectionId="@(section_child.Id)">@(section_child.Name) </a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    @*<h4 class="panel-title"><a href="#">@(section.Name)</a></h4>*@
                    <h4 class="panel-title"><a asp-controller="Catalog" asp-action="Shop" asp-route-sectionId="@(section.Id)">@(section.Name)</a></h4>
                </div>
            </div>
        }
    }

</div><!--/category-products-->
